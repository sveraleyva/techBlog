<div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8">
  <h2>LOG IN</h2>
  <form class="form login-form space-y-6">
    <div class="form-group">
      <label for="email-login" class="block mb-2 text-sm font-medium text-gray-900">Email: </label>
      <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="text" id="email-login"/>
    </div>
    <div class="form-group">
      <label class="block mb-2 text-sm font-medium text-gray-900" for="password-login">Password: </label>
      <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="password" id="password-login"/>
    </div>
    <div class="form-group w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
      <button class="btn btn-primary" type="submit">Log In</button>
    </div>
  </form>
</div>
<div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8">
  <h2>SIGN UP</h2>
  <form class="form signup-form space-y-6">
    <div class="form-group">
      <label for="username-signup" class="block mb-2 text-sm font-medium text-gray-900">Username: </label>
      <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="text" id="username-signup" />
    </div>
    <div class="form-group">
      <label for="email-signup" class="block mb-2 text-sm font-medium text-gray-900">Email:</label>
      <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="text" id="email-signup" />
    </div>
    <div class="form-group">
      <label for="password-signup" class="block mb-2 text-sm font-medium text-gray-900">Password:</label>
      <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="password" id="password-signup" />
    </div>
    <div class="form-group w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
      <button class="btn btn-primary" type="submit">signup</button>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>
