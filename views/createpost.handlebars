<div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8">
    <h2>Create New Post</h2>
    <form class="form newPost-form space-y-6">
      <div class="form-group">
        <label for="post-title" class="block mb-2 text-sm font-medium text-gray-900">Title: </label>
        <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="text" id="title"/>
      </div>
      <div class="form-group">
        <label class="block mb-2 text-sm font-medium text-gray-900" for="post-body">Body: </label>
        <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="body" id="password-login"/>
      </div>
      <div class="form-group w-full text-white bg-[#BFD7B5] hover:bg-[#A3C4BC] focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
        <button type="submit">Create Post</button>
      </div>
    </form>
  </div>