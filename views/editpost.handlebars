<div class="w-2/3 p-4 bg-white border border-gray-200 rounded-lg shadow mx-6 my-2 sm:p-6 md:p-8">
    <p id="postId">{{post.id}}</p>
    <h2>EDIT POST</h2>
    <form class="form editPost-form space-y-6">
        <div class="form-group">
            <label for="title" class="block mb-2 text-sm font-medium text-gray-900">Title: </label>
            <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="text" placeholder="{{post.title}}" id="title"/>
        </div>
        <div class="form-group">
            <label class="block mb-2 text-sm font-medium text-gray-900" for="body">Body: </label>
            <input class="form-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" type="text" placeholder="{{post.body}}" id="body"/>
        </div>
        <div class="form-group w-full text-white bg-[#12664F] hover:bg-[#A3C4BC] focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
            <button type="submit">EDIT POST</button>
        </div>
    </form>
</div>

<script src="/js/editpost.js"></script>